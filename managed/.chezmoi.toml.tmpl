{{- $interactive := not (any (env "CI") (env "HEADLESS") (env "GITHUB_ACTIONS") (env "CODESPACES")) -}}

{{ $name := false -}}
{{ $isPersonalMachine := false -}}
{{ $registries := false -}}
{{ $githubToken := false -}}

{{- $osID := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-   $osID = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{- if $interactive -}}
{{- writeToStdout "Interactive configuration generation\n" -}}
{{- $name = promptString  "Desired git author name" -}}
{{- $isPersonalMachine = promptBool  "Is this a personal machine" -}}
{{- $registries = splitList " " (promptString "Configure any GitHub Package Organizations") }}
{{- end -}}

sourceDir = {{ .chezmoi.sourceDir | quote }}

[data]
  osID = {{ $osID | quote }}
  isPersonalMachine = {{ $isPersonalMachine }}

{{- if $registries -}}
[data.github]
  registries = {{ $registries | toToml }}
{{- end -}}

[data.git]
  name = {{ $name | quote }}
  signingkey = "some secret key"
